@model MVCeDOCSwebServiceClient.Models.ContactInput

@{
    ViewBag.Title = "Index";
}

<h2>Send a Comment</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.SelectedSearch, new { data_val = "false" })
    @Html.HiddenFor(x => x.currentSearchMode, new { data_val = "false" })

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        
    <div class="col-md-12">

        <div class="form-group">
            @*Contact Name*@
            <div class="row">
                <div class="col-sm-2">
                    @Html.LabelFor(x => x.ContactName)
                </div><!--col-sm-2-->
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.ContactName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ContactName)
                </div>
            </div>
        </div>

        <div class="form-group">
            @*Contact Email*@
            <div class="row">
                <div class="col-sm-2">
                    @Html.LabelFor(x => x.ContactEmail)
                </div>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.ContactEmail, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ContactEmail)
                </div>
            </div>

        </div>

        <div class="form-group">
            @*Subject*@
            <div class="row">
                <div class="col-sm-2">
                    @Html.LabelFor(x => x.Subject)
                </div>
                <div class="col-sm-10">
                    @Html.DropDownListFor(x => x.Subject, Model.Subjects, "Make your selection...", new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Subject)
                </div>
            </div>
        </div>

        <div class="form-group">
            @*Message*@
            <div class="row">
                <div class="col-sm-2">
                    @Html.LabelFor(x => x.Message)
                </div>

                <div class="col-sm-10">
                    @Html.TextAreaFor(x => x.Message, new { @class = "form-control", @rows = "4" })
                    @Html.ValidationMessageFor(x => x.Message)
                </div>

            </div>
        </div>

        <div class="form-group">
            @*Submit Button*@
            <div class="row">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Send Your Comment" class="btn btn-default" />
                </div>
            </div>
        </div>
            
        



    </div>

    </div>


}

